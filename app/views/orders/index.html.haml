- title t('label.order.plural')
- breadcrumbs.add l(@date), nil, :i18n => false

#main.ten.columns
  %article
    %header
      %h2= t 'label.order.plural'
      = link_to t('label.add'), new_order_path, :class => 'button-pill'

    %section
      %header
        %h3.date= l @date
        = link_to_statuses @date

      = render 'list', :orders => @orders

    = link_to_prev_next_days @date, method(:date_orders_path)
