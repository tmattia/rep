= simple_form_for @order_item, :url => @order_item.new_record? ? order_order_items_path(@order_item.order) : order_order_item_path(@order_item.order, @order_item) do |f|
  = f.association :product,
                  :collection => @order_item.order.company.products,
                  :label_method => 'code',
                  :prompt => t('label.select')

  = f.input :color

  .five.columns.alpha
    = f.input :unit_price
  .five.columns.omega
    = f.input :quantity

  .ten.columns.alpha.omega
    = f.submit
    - if @order_item.new_record?
      = t 'label.or'
      = f.submit t('label.order_item.save_and_add_another')
