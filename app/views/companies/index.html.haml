.ten.columns.alpha.gama
  %h1= t 'label.company.plural'

  - if @companies.length > 0
    %ul.companies
      - @companies.each do |company|
        %li= link_to company.name, company
  - else
    %p= t 'label.no_records', :model => t('activerecord.models.company')

.six.columns.alpha.omega
  = link_to t('label.company.add'), new_company_path

