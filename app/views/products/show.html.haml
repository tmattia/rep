- title "#{t('activerecord.models.product')} #{@product.code}"
- breadcrumbs.add @product.code, nil, :i18n => false

#main.ten.columns
  %h2= @product.code

  %article
    %header
      %h3= t 'label.record_data'
      = link_to t('label.edit'), edit_product_path(@product), :class => 'button-pill'

    = show_for @product do |p|
      = p.association :company do
        = link_to @product.company.name, @product.company
      = p.attribute :description do
        = simple_format(@product.description)
