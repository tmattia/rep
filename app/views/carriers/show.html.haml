- title @carrier.name
- breadcrumbs.add @carrier.name, nil, :i18n => false

#main.ten.columns
  %h2= @carrier.name

  %article
    %header
      %h3= t 'label.record_data'
      = link_to t('label.edit'), edit_carrier_path(@carrier), :class => 'button-pill'

    = show_for @carrier do |c|
      = c.attribute :name
